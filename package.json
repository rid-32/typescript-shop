{
  "name": "typescript",
  "version": "1.0.0",
  "description": "First experience with typescript on node.js",
  "main": "index.js",
  "scripts": {
    "start:prod": "export NODE_ENV=production && tsc && node ./build",
    "start:dev": "export NODE_ENV=development && nodemon --exec node --inspect --require ts-node/register ./src/index.ts",
    "image:build": "docker build -t rest-shop .",
    "container:run": "docker run -it -p 3000:3000 -v $(pwd):/app rest-shop",
    "tsc": "tsc src/**/*.ts --noEmit",
    "lint": "eslint \"src/**/*\"",
    "prettier": "prettier \"src/**/*.+(js|ts)\"",
    "format": "npm run prettier -- --write",
    "validate": "npm run lint && npm run prettier -- --list-different && npm run tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run tsc"
    }
  },
  "keywords": [
    "typescript",
    "nodejs",
    "rest",
    "api"
  ],
  "author": "DenRostokin",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "config": "^3.0.1",
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.18.10",
    "prettier": "^1.17.1",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/config": "^0.0.34",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.3.24",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/node": "^11.13.0",
    "bcrypt": "^3.0.6",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.4.20",
    "morgan": "^1.9.1",
    "multer": "^1.4.1"
  }
}
