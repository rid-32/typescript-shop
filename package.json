{
  "name": "typescript",
  "version": "1.0.0",
  "description": "First experience with typescript on node.js",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start:prod": "npm run build && node ./build",
    "dev": "export NODE_ENV=development && nodemon --exec ts-node ./src/index.ts",
    "image:build": "docker build -t rest-shop .",
    "container:run": "docker run -it -p 3000:3000 -v $(pwd):/app rest-shop"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "rest",
    "api"
  ],
  "author": "DenRostokin",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/mongoose": "^5.3.24",
    "@types/node": "^11.13.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "config": "^3.0.1",
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "nodemon": "^1.18.10",
    "prettier-eslint": "^8.8.2",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1",
    "wait-on": "^3.2.0"
  },
  "dependencies": {
    "express": "^4.16.4",
    "mongoose": "^5.4.20"
  }
}
